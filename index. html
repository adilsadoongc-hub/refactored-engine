    <script>
        // نظام إدارة الحجوزات - الإصدار المعدل
        class ReservationSystem {
            constructor() {
                this.totalSeats = 20000;
                this.reservedSeats = 0;
                this.usedNames = new Set();
                this.usedNationalIds = new Set();
                this.currentTicketId = 0;
                this.reservations = [];
                
                this.initialize();
            }
            
            initialize() {
                this.loadFromLocalStorage();
                this.setupEventListeners();
                this.updateUI();
                
                console.log('تم تهيئة نظام الحجوزات بنجاح');
            }
            
            loadFromLocalStorage() {
                const savedData = localStorage.getItem('stadiumReservationSystem');
                
                if (savedData) {
                    try {
                        const data = JSON.parse(savedData);
                        this.totalSeats = data.totalSeats || 20000;
                        this.reservedSeats = data.reservedSeats || 0;
                        this.usedNames = new Set(data.usedNames || []);
                        this.usedNationalIds = new Set(data.usedNationalIds || []);
                        this.currentTicketId = data.currentTicketId || 0;
                        this.reservations = data.reservations || [];
                    } catch (error) {
                        console.error('خطأ في تحميل البيانات:', error);
                    }
                }
            }
            
            saveToLocalStorage() {
                const data = {
                    totalSeats: this.totalSeats,
                    reservedSeats: this.reservedSeats,
                    usedNames: Array.from(this.usedNames),
                    usedNationalIds: Array.from(this.usedNationalIds),
                    currentTicketId: this.currentTicketId,
                    reservations: this.reservations
                };
                
                try {
                    localStorage.setItem('stadiumReservationSystem', JSON.stringify(data));
                } catch (error) {
                    console.error('خطأ في حفظ البيانات:', error);
                    this.showToast('خطأ في حفظ البيانات', 'error');
                }
            }
            
            setupEventListeners() {
                document.getElementById('reservationForm').addEventListener('submit', (e) => {
                    e.preventDefault();
                    this.handleFormSubmit();
                });
                
                document.getElementById('printBtn').addEventListener('click', () => {
                    window.print();
                });
                
                const formFields = ['fullName', 'nationalId', 'matchName', 'standType'];
                formFields.forEach(field => {
                    document.getElementById(field).addEventListener('input', () => {
                        this.updateTicketPreview();
                    });
                });
            }
            
            handleFormSubmit() {
                const submitBtn = document.getElementById('submitBtn');
                const originalText = submitBtn.innerHTML;
                
                submitBtn.innerHTML = '<span class="spinner"></span> جاري المعالجة...';
                submitBtn.disabled = true;
                
                setTimeout(() => {
                    try {
                        const formData = this.getFormData();
                        
                        if (this.validateFormData(formData)) {
                            this.processReservation(formData);
                            this.showToast('تم حجز التذكرة بنجاح', 'success');
                            this.updateUI();
                        }
                    } catch (error) {
                        console.error('خطأ في معالجة الحجز:', error);
                        this.showToast(error.message, 'error');
                    } finally {
                        submitBtn.innerHTML = originalText;
                        submitBtn.disabled = false;
                    }
                }, 1000);
            }
            
            getFormData() {
                return {
                    fullName: document.getElementById('fullName').value.trim(),
                    nationalId: document.getElementById('nationalId').value.trim(),
                    matchName: document.getElementById('matchName').value.trim(),
                    standType: document.getElementById('standType').value
                };
            }
            
            validateFormData(data) {
                if (!data.fullName || !data.nationalId || !data.matchName || !data.standType) {
                    throw new Error('يرجى ملء جميع الحقول المطلوبة');
                }
                
                if (this.usedNames.has(data.fullName)) {
                    throw new Error('هذا الاسم مسجل مسبقاً');
                }
                
                if (this.usedNationalIds.has(data.nationalId)) {
                    throw new Error('رقم البطاقة مسجل مسبقاً');
                }
                
                if (this.reservedSeats >= this.totalSeats) {
                    throw new Error('عذراً، لا توجد مقاعد متاحة');
                }
                
                return true;
            }
            
            processReservation(data) {
                this.reservedSeats++;
                this.currentTicketId++;
                
                this.usedNames.add(data.fullName);
                this.usedNationalIds.add(data.nationalId);
                
                const reservation = {
                    ticketId: this.currentTicketId,
                    name: data.fullName,
                    nationalId: data.nationalId,
                    match: data.matchName,
                    standType: data.standType,
                    date: new Date().toISOString()
                };
                
                this.reservations.push(reservation);
                
                this.saveToLocalStorage();
                this.generateTicket(data);
            }
            
            generateTicket(data) {
                document.getElementById('ticketId').textContent = this.currentTicketId.toString().padStart(4, '0');
                document.getElementById('previewName').textContent = data.fullName;
                document.getElementById('previewNationalId').textContent = data.nationalId;
                document.getElementById('previewMatch').textContent = data.matchName;
                
                const standTypeDisplay = data.standType === "VIP" ? "رئيسي (VIP)" : "عادي (Regular)";
                document.getElementById('previewStand').textContent = standTypeDisplay;
                
                const now = new Date();
                const formattedDate = now.toLocaleDateString('ar-SA', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });
                document.getElementById('previewDate').textContent = formattedDate;
                
                this.generateQRCode(data);
                document.getElementById('printBtn').style.display = 'block';
            }
            
            generateQRCode(data) {
                const canvas = document.getElementById('ticketQrCode');
                const qrData = this.prepareQRData(data);
                
                const ctx = canvas.getContext('2d');
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                
                QRCode.toCanvas(canvas, qrData, {
                    width: 180,
                    margin: 1,
                    color: {
                        dark: '#000000',
                        light: '#FFFFFF'
                    }
                }, (error) => {
                    if (error) {
                        console.error('خطأ في إنشاء QR Code:', error);
                        this.drawQRCodeFallback(ctx, qrData);
                    }
                });
            }
            
            prepareQRData(data) {
                let englishMatchName = data.matchName;
                const teamMappings = {
                    'النصر': 'AlNassr',
                    'الهلال': 'AlHilal',
                    'الاتحاد': 'AlIttihad',
                    'الأهلي': 'AlAhli',
                    'الشباب': 'AlShabab'
                };
                
                for (const [arabic, english] of Object.entries(teamMappings)) {
                    if (englishMatchName.includes(arabic)) {
                        englishMatchName = englishMatchName.replace(arabic, english);
                    }
                }
                
                const qrData = {
                    id: this.currentTicketId,
                    name: data.fullName,
                    nationalId: data.nationalId,
                    match: englishMatchName,
                    stand: data.standType,
                    date: new Date().toISOString()
                };
                
                return JSON.stringify(qrData);
            }
            
            drawQRCodeFallback(ctx, text) {
                ctx.fillStyle = '#FFFFFF';
                ctx.fillRect(0, 0, 180, 180);
                
                ctx.fillStyle = '#000000';
                ctx.font = '14px Arial';
                ctx.textAlign = 'center';
                ctx.fillText('QR Code', 90, 90);
                ctx.font = '10px Arial';
                ctx.fillText('(بديل)', 90, 105);
            }
            
            updateTicketPreview() {
                const data = this.getFormData();
                
                document.getElementById('previewName').textContent = data.fullName || '-';
                document.getElementById('previewNationalId').textContent = data.nationalId || '-';
                document.getElementById('previewMatch').textContent = data.matchName || '-';
                
                if (data.standType) {
                    const standTypeDisplay = data.standType === "VIP" ? "رئيسي (VIP)" : "عادي (Regular)";
                    document.getElementById('previewStand').textContent = standTypeDisplay;
                } else {
                    document.getElementById('previewStand').textContent = '-';
                }
                
                document.getElementById('previewDate').textContent = new Date().toLocaleDateString('ar-SA');
            }
            
            updateUI() {
                document.getElementById('totalSeats').textContent = this.totalSeats.toLocaleString();
                document.getElementById('remainingSeats').textContent = (this.totalSeats - this.reservedSeats).toLocaleString();
            }
            
            showToast(message, type = 'success') {
                const toast = document.getElementById('toast');
                toast.textContent = message;
                toast.className = 'toast show';
                
                if (type === 'error') {
                    toast.classList.add('error');
                } else if (type === 'warning') {
                    toast.classList.add('warning');
                }
                
                setTimeout(() => {
                    toast.className = 'toast';
                }, 3000);
            }
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            window.reservationSystem = new ReservationSystem();
        });
    </script>
</body>
</html>
